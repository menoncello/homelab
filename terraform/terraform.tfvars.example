# Proxmox Configuration
proxmox_api_url      = "https://192.168.31.75:8006/api2/json"
proxmox_user         = "root@pam"
# proxmox_password     = "your_password_here"  # Use API token instead
proxmox_api_token_id = "your-token-name"
proxmox_api_token_secret = "your-secret-token"
proxmox_tls_insecure = true

# Cloudflare Configuration
cloudflare_api_token = "your_cloudflare_api_token"
domain = "your-homelab-domain.com"

# Proxmox Nodes
helios_node = "pve-helios"
xeon_node = "pve-xeon"

# SSH Public Keys (add your keys here)
ssh_public_keys = [
  "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... your-key-here",
]

# VM Templates (if you have custom templates)
vm_templates = {
  ubuntu2204 = {
    node         = "pve-xeon"
    vm_id        = 9000
    name         = "ubuntu-2204-cloudinit"
    description  = "Ubuntu 22.04 with Cloud-Init"
    cores        = 2
    memory       = 2048
    disk_size    = "8G"
    storage_pool = "local-zfs"
    network = {
      bridge = "vmbr0"
      vlan   = 30
      ip     = "dhcp"
      gateway = "192.168.31.1"
    }
    tags = ["ubuntu", "cloudinit", "template"]
  }
}