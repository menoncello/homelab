# ============================================
# HOMELAB SECURITY ENVIRONMENT VARIABLES
# ============================================

# HashiCorp Vault Configuration
VAULT_ROOT_TOKEN=hvs.homelab-root-token-very-secure-string
VAULT_DEV_ROOT_TOKEN_ID=hvs.homelab-root-token-very-secure-string

# Admin credentials (for initial setup)
VAULT_ADMIN_USERNAME=admin
VAULT_ADMIN_PASSWORD=your-secure-vault-admin-password

# Configuration
VAULT_ADDR=http://localhost:8200
VAULT_API_ADDR=http://localhost:8200

# Security settings
VAULT_UI=true
VAULT_DISABLE_MLOCK=false

# Audit log configuration
VAULT_AUDIT_FILE_PATH=/vault/logs/audit.log
VAULT_AUDIT_LEVEL=info

# Backup configuration
VAULT_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
VAULT_BACKUP_RETENTION=30  # 30 days

# Integration with existing services
DOMAIN=your-homelab-domain.com

# LDAP/AD Integration (if using corporate authentication)
VAULT_LDAP_URL=ldap://your-ldap-server:389
VAULT_LDAP_BIND_DN=cn=admin,dc=company,dc=com
VAULT_LDAP_BIND_PASSWORD=your-ldap-password
VAULT_LDAP_USER_DN=ou=users,dc=company,dc=com
VAULT_LDAP_GROUP_DN=ou=groups,dc=company,dc=com

# OIDC Integration (if using OAuth/OIDC)
VAULT_OIDC_CLIENT_ID=your-oidc-client-id
VAULT_OIDC_CLIENT_SECRET=your-oidc-client-secret
VAULT_OIDC_DISCOVERY_URL=https://your-provider/.well-known/openid-configuration

# Custom services configuration
VAULT_CUSTOM_APP_ROLE_COUNT=10
VAULT_CUSTOM_SECRET_TTL=24h
VAULT_CUSTOM_SECRET_MAX_TTL=720h