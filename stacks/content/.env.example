# Content Stack Environment Variables
# Copy to .env and adjust as needed

COMPOSE_PROJECT_NAME=content

# Nextcloud settings
NEXTCLOUD_PORT=8080
NEXTCLOUD_VERSION=latest

# Audiobookshelf settings
AUDIOBOOKSHELF_PORT=13378
AUDIOBOOKSHELF_VERSION=latest

# PostgreSQL settings
POSTGRES_VERSION=15-alpine
POSTGRES_PORT=5432
POSTGRES_USER=nextcloud
POSTGRES_DB=nextcloud
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis settings
REDIS_VERSION=7-alpine
REDIS_PORT=6379

# User settings
PUID=1000
PGID=1000
TZ=America/Sao_Paulo

# Resource limits
NEXTCLOUD_MEMORY_LIMIT=2G
NEXTCLOUD_MEMORY_RESERVATION=1G
AUDIOBOOKSHELF_MEMORY_LIMIT=1G
AUDIOBOOKSHELF_MEMORY_RESERVATION=512M
POSTGRES_MEMORY_LIMIT=2G
POSTGRES_MEMORY_RESERVATION=1G
REDIS_MEMORY_LIMIT=512M
REDIS_MEMORY_RESERVATION=256M
