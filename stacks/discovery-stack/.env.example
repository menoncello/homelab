# Discovery Stack Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# SPOTIFY (for Lidify - Music Discovery)
# Get credentials from: https://developer.spotify.com/dashboard
# ============================================================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ============================================================================
# LASTFM (for Lidify - Music Discovery)
# Get API key from: https://www.last.fm/api/account/create
# ============================================================================
LASTFM_API_KEY=your_lastfm_api_key_here

# ============================================================================
# LIDARR (for Lidify integration)
# Get API key from Lidarr Settings > General > API Key
# Default URL assumes Lidarr is on same network
# ============================================================================
LIDARR_API_KEY=your_lidarr_api_key_here
# LIDARR_URL=http://lidarr:8686  # Default, already set in compose

# ============================================================================
# JELLYSEERR (for ListSync)
# Get API key from Jellyseerr Settings > General > API Key
# ============================================================================
JELLYSEERR_API_KEY=your_jellyseerr_api_key_here
# JELLYSEERR_URL=http://jellyseerr:5055  # Default, already set in compose

# ============================================================================
# TRAKT (for ListSync - Watchlist Syncing)
# Get credentials from: https://trakt.tv/oauth/applications
# Redirect URI: http://localhost:8082/callback
# ============================================================================
TRAKT_CLIENT_ID=your_trakt_client_id_here
TRAKT_CLIENT_SECRET=your_trakt_client_secret_here
TRAKT_ACCESS_TOKEN=your_trakt_access_token_here

# ============================================================================
# IMDB (for ListSync - Watchlist Syncing)
# Find your watchlist URL at: https://www.imdb.com/list/watchlist
# Example: https://www.imdb.com/user/ur1234567/list/watchlist
# ============================================================================
IMDB_USER_LIST_URL=https://www.imdb.com/user/urXXXXXXX/list/watchlist

# ============================================================================
# LETTERBOXD (for ListSync - Watchlist Syncing)
# Your Letterboxd username (not password)
# ============================================================================
LETTERBOXD_USERNAME=your_letterboxd_username_here

# ============================================================================
# PODCASTINDEX (for PinePods - Podcast Discovery)
# Get credentials from: https://podcastindex.org/
# ============================================================================
PODINDEX_KEY=your_podindex_key_here
PODINDEX_SECRET=your_podindex_secret_here

# ============================================================================
# PINEPODS DATABASE
# Password for PinePods PostgreSQL database
# Generate a secure password for production use
# ============================================================================
PINEPODS_DB_PASSWORD=change_this_secure_password

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================
# SYNC_INTERVAL=1h  # ListSync sync interval (default: 1h)
# ND_SCANSCHEDULE=1h  # Navidrome scan schedule (default: 1h)
# ND_SESSIONTIMEOUT=24h  # Navidrome session timeout (default: 24h)
