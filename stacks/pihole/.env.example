# Pi-hole Stack Environment Variables
# Copy to .env and adjust as needed

COMPOSE_PROJECT_NAME=pihole

# Pi-hole settings
PIHOLE_VERSION=latest
PIHOLE_WEBPASSWORD=piholeadmin2024
PIHOLE_DNS_=1.1.1.1;1.0.0.1

# Web Interface
WEBTHEME=default-darker
VIRTUAL_HOST=pihole.homelab.local

# Network settings
TZ=America/Sao_Paulo
SERVERIP=192.168.31.237

# DNS upstream servers (Cloudflare, Google, etc)
# Options:
# - 1.1.1.1;1.0.0.1 (Cloudflare)
# - 8.8.8.8;8.8.4.4 (Google)
# - 9.9.9.9;149.112.112.112 (Quad9)

# Web UI ports (changed to avoid conflict with Nginx Proxy Manager)
PIHOLE_WEB_PORT=8053

# DNS ports
DNS_PORT=53
DHCP_PORT=67

# Resource limits
PIHOLE_MEMORY_LIMIT=512M
PIHOLE_MEMORY_RESERVATION=256M
