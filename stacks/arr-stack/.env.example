# ARR Stack Environment Variables
# Copy to .env and adjust as needed

COMPOSE_PROJECT_NAME=arr-stack

# Sonarr settings
SONARR_PORT=8989
SONARR_VERSION=latest

# Radarr settings
RADARR_PORT=7878
RADARR_VERSION=latest

# Transmission settings
TRANSMISSION_PORT=9091
TRANSMISSION_PEER_PORT=51413
TRANSMISSION_VERSION=latest

# User settings
PUID=1000
PGID=1000
TZ=America/Sao_Paulo

# Resource limits
SONARR_MEMORY_LIMIT=1G
SONARR_MEMORY_RESERVATION=512M
RADARR_MEMORY_LIMIT=1G
RADARR_MEMORY_RESERVATION=512M
TRANSMISSION_MEMORY_LIMIT=512M
TRANSMISSION_MEMORY_RESERVATION=256M
